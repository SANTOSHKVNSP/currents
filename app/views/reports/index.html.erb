<h1>Listing Reports</h1>

<table>
  <thead>
    <tr>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Date</th>
      <th>Target species</th>
      <th>General location</th>
      <th>Catch keepers</th>
      <th>Catch total</th>
      <th>Trip summary</th>
      <th>Primary method</th>
      <th>Tide</th>
      <th>Weather</th>
      <th>Wind</th>
      <th>Spot</th>
      <th>Best bait</th>
      <th>Trip description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.latitude %></td>
        <td><%= report.longitude %></td>
        <td><%= report.date %></td>
        <td><%= report.target_species %></td>
        <td><%= report.general_location %></td>
        <td><%= report.catch_keepers %></td>
        <td><%= report.catch_total %></td>
        <td><%= report.trip_summary %></td>
        <td><%= report.primary_method %></td>
        <td><%= report.tide %></td>
        <td><%= report.weather %></td>
        <td><%= report.wind %></td>
        <td><%= report.spot %></td>
        <td><%= report.best_bait %></td>
        <td><%= report.trip_description %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Report', new_report_path %>

<div style='width: 800px;'>
  <div id="multi_overlays" style='width: 1000px; height: 600px;'></div>
</div>

<script type="text/javascript">
    handler = Gmaps.build('Google');
    handler.buildMap({ internal: {id: 'multi_overlays'}}, function(){
    handler.bounds.extendWith(polygons);
    handler.fitMapToBounds();  
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds(); 
    });
        
      var polygons = handler.addPolygons(
        [
          <% @location.each do |location| %>
          //<%= location.short_name %>
            <%= location.coordinates.to_json.gsub!(/\"/,'').html_safe %>,
          <% end %>
        ],
          { strokeColor: '#FF0000'}
      );
      

</script>

