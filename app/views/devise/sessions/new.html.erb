<body>

   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="wrapper">
  <div class="block-center mt-xl wd-xl">
    <!-- START panel-->
    <div class="panel panel-inverse panel-flat">
      <div class="panel-heading text-center">
        <a href="#">
          <img src="/assets/map_theme/tuna.png" alt="App Logo" class="block-center img-rounded" style="height: 55px">
        </a>
      </div>
      <div class="panel-body">
              <!-- Email input  -->
          <div class="form-group has-feedback">            
            <p class="text-center">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true %>
            </p>
          </div>  
            <!-- password input -->
          <div class="field">
            <p class="text-center">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off" %>
            </p>
          </div>
            <!-- remember me box -->
          <div class="field">         
            <% if devise_mapping.rememberable? -%>
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
          </div>
            <!-- Submit button -->
            <p>
              <button type="submit" class="btn btn-block btn-inverse mt-lg">
                <%= "Log in" %>
              </button>
                  <% end -%>
            </p>  
      </div>
      
       <!-- footer links -->
      <div class="panel-footer">
      
        <p class="MO">
          <ul><%= render "devise/shared/links" %></ul>
        </p>
      </div>
      

      <!-- </div> -->
         <!-- </div> -->
